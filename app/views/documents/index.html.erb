<p id="notice"><%= notice %></p>

<table class="table table-hover">
  <thead>
    <tr class="table-primary">
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td>
          <%= link_to document.title, document %>
        </td>
        <td class="text-right">
          <%= link_to 'Edit', edit_document_path(document), class: 'btn btn-sm btn-outline-primary' %>
          <%= link_to 'Destroy', document, method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'btn btn-sm btn-outline-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

